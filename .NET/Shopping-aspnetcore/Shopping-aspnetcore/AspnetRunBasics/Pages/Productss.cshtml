@page
@model AspnetRunBasics.Pages.ProductssModel
@{
}

<<div class="container">
    <div class="row">
        <div class="col">
            <h3>Create a New Product</h3>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="Name" value="@Model.NewProduct.Name" required>
                </div>
                <div class="form-group">
                    <label for="summary">Summary:</label>
                    <textarea class="form-control" id="summary" name="Summary" rows="3" required>@Model.NewProduct.Summary</textarea>
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    <input type="number" class="form-control" id="price" name="Price" value="@Model.NewProduct.Price" >
                </div>
                <div class="form-group">
                    <label for="image">Image:</label>
                    <input type="file" class="form-control-file" id="image" name="ImageFile" value="@Model.NewProduct.ImageFile>
                </div>
            @*    <div class="form-group">
                    <label for="categoryId">Category:</label>
                    <select class="form-control" id="categoryId" name="CategoryId" required>
                        @foreach (var category in Model.ProductInfo)
                        {
                            <option value="@category.Id" @(category.Id == Model.ProductInfo.CategoryId ? "selected" : "")>@category.Name</option>
                        }
                    </select>
                </div>*@
                <button type="submit" class="btn btn-primary">Create Product</button>
            </form>
        </div>
    </div>
</div>
